{
  "name": "atenxion-emr",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "npm run build:backend",
    "build:backend": "tsc && npm --prefix client install && npm --prefix client run build",
    "build:portal": "npm --prefix patient-portal ci && npm --prefix patient-portal run build",
    "build:all": "npm run build && npm run build:portal",
    "start": "NODE_ENV=production node dist/index.js",
    "start:deploy": "npm run migrate:deploy && npm run prisma:seed && NODE_ENV=production node dist/index.js",
    "prebuild": "prisma generate",
    "prestart": "prisma generate",
    "postinstall": "npm --prefix patient-portal install --include=dev && prisma generate",
    "dev": "concurrently -k -n API,WEB \"tsx watch --exclude patient-portal/.next --exclude dist_client --exclude client/node_modules src/index.ts\" \"cd client && npm run dev\"",
    "dev:api": "tsx watch --exclude patient-portal/.next --exclude dist_client --exclude client/node_modules src/index.ts",
    "dev:web": "cd client && npm run dev",
    "predev": "npm run migrate:deploy",
    "predev:api": "npm run migrate:deploy",
    "migrate": "node scripts/migrate-deploy.js",
    "migrate:deploy": "node scripts/migrate-deploy.js",
    "seed:csv": "tsx scripts/loadCsv.ts",
    "seed:demo": "tsx prisma/seed-demo.mts",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --runInBand",
    "lint": "eslint .",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev --name pharmacy_mvp",
    "prisma:seed": "tsx prisma/seed.mts",
    "seed": "prisma db seed",
    "tenant:create": "tsx scripts/createTenant.ts",
    "reset:db": "prisma migrate reset --force",
    "patient-portal:sw:reset": "tsx scripts/queueSwUnregister.ts",
    "studio": "prisma studio"
  },
  "prisma": {
    "seed": "tsx prisma/seed.mts"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2",
    "@types/express": "^4",
    "@types/jest": "^29",
    "@types/morgan": "^1",
    "@types/multer": "^1.4.12",
    "@types/node": "^20.19.13",
    "@types/pdf-parse": "^1.1.5",
    "@types/supertest": "^2",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "concurrently": "^9",
    "dotenv": "^17.2.2",
    "eslint": "^9.35.0",
    "jest": "^29",
    "supertest": "^6",
    "ts-jest": "^29",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@prisma/client": "^6.15.0",
    "bcrypt": "^5",
    "cors": "^2",
    "csv-parse": "^6.1.0",
    "express": "^4",
    "next": "14.2.5",
    "express-rate-limit": "^7",
    "helmet": "^7",
    "mongodb": "^6.20.0",
    "morgan": "^1",
    "multer": "^2.0.0",
    "openai": "^4.77.3",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "pdf-parse": "^1.1.1",
    "prisma": "^6.15.0",
    "zod": "^3"
  }
}
